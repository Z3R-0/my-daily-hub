@page "/habits"

@using shared.Providers
@using Services;
@inject IDateTimeProvider _dateTimeProvider
@inject ILocalStorageService _localStorageService

<h1>Habits</h1>

<div>
    <h3>Hello there, good @timeOfDayGreeting</h3>
    <p>The current time is: @currentTime</p>

    <p>What are you planning to do today?</p>
    <input type="text" placeholder="Enter your habit here..." @bind="newHabit"/>
    <button @onclick="HandleSubmitAsync">Add Habit</button>

    <p>Current habit: @(string.IsNullOrEmpty(currentHabit) ? "No habit set yet" : currentHabit)</p>
</div>


